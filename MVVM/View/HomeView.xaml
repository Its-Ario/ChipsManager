<UserControl x:Class="PBManager.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="#22202F" CornerRadius="8" Padding="15" Margin="0,0,10,0" Grid.Column="0">
            <StackPanel FlowDirection="RightToLeft">
                <TextBlock Text="اطلاعات هفتگی" Foreground="White" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding AvgStudyTime, StringFormat=میانگین دقیقه مطالعه: {0}}" 
                               Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding MostStudiedSubject, StringFormat=بیشترین درس مطالعه شده: {0}}"
                               TextWrapping="Wrap"
                               Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding ClassesCount, StringFormat=تعداد کلاس‌ها: {0}}" 
                               Foreground="White" FontSize="14"/>
            </StackPanel>
        </Border>

        <Border Background="#22202F" CornerRadius="8" Padding="10" Grid.Column="1">
            <StackPanel>
                <TextBlock Text="پیشرفت تحصیلی" Foreground="White" FontSize="14" Margin="0,0,0,5" HorizontalAlignment="Right"/>
                <lvc:CartesianChart Series="{Binding StudyOverTimeSeries}" Height="190">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="هفته‌ها" Labels="{Binding StudyOverTimeLabels}" />
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="(زمان مطالعه (دقیقه"
                                  MinValue="0"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </StackPanel>
        </Border>

        <Border Background="#22202F" CornerRadius="8" Padding="10" Margin="0,10,0,0" Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <TextBlock Text="میانگین مطالعه هفته گذشته" Foreground="White" FontSize="14" Margin="0,0,0,5" HorizontalAlignment="Right"/>
                <lvc:CartesianChart Name="SubjectBarChart" Height="190"/>
            </StackPanel>
        </Border>

        <Border Background="#22202F" CornerRadius="8" Padding="10" Margin="0,10,10,0" Grid.Row="1" Grid.Column="0">
            <StackPanel>
                <TextBlock Text="دسترسی آسان" Foreground="White" FontSize="14" Margin="0,0,0,5" HorizontalAlignment="Right"/>
                <WrapPanel Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           ItemWidth="120"
                           FlowDirection="RightToLeft">
                    <Button Content="ثبت نمرات"
                            Command="{Binding AddStudyHourCommand}"
                            Margin="5"
                            Width="110" Height="50"
                            Style="{StaticResource ModernButtonStyle}"/>
                    <Button Content="ثبت ساعت مطالعه"
                            Command="{Binding AddStudyHourCommand}"
                            Margin="5"
                            Width="110" Height="50"
                            Style="{StaticResource ModernButtonStyle}"/>
                    <Button Content="خروجی گرفتن"
                            Command="{Binding ExportCommand}"
                            Margin="5"
                            Width="110" Height="50"
                            Style="{StaticResource ModernButtonStyle}"/>
                </WrapPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

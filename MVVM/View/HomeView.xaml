<UserControl x:Class="PBManager.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#22202F" CornerRadius="8" Padding="15" Margin="0,0,10,0" Grid.Column="0">
                <StackPanel FlowDirection="RightToLeft">
                    <TextBlock Text="{Binding AvgGrade, StringFormat=میانگین ساعت مطالعه: {0}}" 
                               Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding TotalStudents, StringFormat=تعداد دانش آموزان: {0}}" 
                               Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding ClassesCount, StringFormat=تعداد کلاس‌ها: {0}}" 
                               Foreground="White" FontSize="14"/>
                </StackPanel>
            </Border>

            <Border Background="#22202F" CornerRadius="8" Padding="10" Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="پیشرفت تحصیلی" Foreground="White" FontSize="14" Margin="0,0,0,5" HorizontalAlignment="Right"/>
                    <lvc:CartesianChart Name="GradesOverTimeChart" Height="150">
                    </lvc:CartesianChart>
                </StackPanel>
            </Border>
        </Grid>

        <Border Background="#22202F" CornerRadius="8" Padding="10" Margin="0,10,0,0" Grid.Row="1">
            <StackPanel>
                <TextBlock Text="میانگین مطالعه هر درس" Foreground="White" FontSize="14" Margin="0,0,0,5" HorizontalAlignment="Right"/>
                <lvc:CartesianChart Name="SubjectBarChart" Height="200"/>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>

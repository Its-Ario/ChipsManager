<Window x:Class="PBManager.MVVM.View.AddStudyRecordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PBManager.MVVM.View"
        mc:Ignorable="d"
        Title="AddStudyRecordView" Height="450" Width="350"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="#272537" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid x:Name="TitleBar"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                  Background="Transparent">

                <TextBlock Text="ثبت اطلاعات مطالعه"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="20"/>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,5,5,0">
                    <Button x:Name="MinimizeButton" 
                            Click="MinimizeButton_Click" 
                            Content="—" 
                            Style="{StaticResource WindowButtonStyle}"/>
                    <Button x:Name="CloseButton" 
                            Click="CloseButton_Click" 
                            Content="✕" 
                            Style="{StaticResource WindowButtonStyle}"/>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding SubjectEntries}" FlowDirection="RightToLeft">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Content="{Binding Subject.Name}"
                                           Margin="5"
                                           FontSize="14"
                                           Foreground="White"/>

                                    <Border x:Name="TextBoxBorder"
                                            CornerRadius="10"
                                            Background="#353340"
                                            Width="70"
                                            Height="30"
                                            Grid.Column="1"
                                            BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding (Validation.HasError), ElementName=MinutesTextBox}" Value="True">
                                                        <Setter Property="BorderBrush" Value="Red"/>
                                                    </DataTrigger>

                                                    <DataTrigger Binding="{Binding (Validation.HasError), ElementName=MinutesTextBox}" Value="False">
                                                        <Setter Property="BorderBrush" Value="Green"/>
                                                    </DataTrigger>

                                                    <DataTrigger Binding="{Binding Text.Length, ElementName=MinutesTextBox}" Value="0">
                                                        <Setter Property="BorderBrush" Value="#272537"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <TextBox x:Name="MinutesTextBox"
                                                 Text="{Binding MinutesStudied, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                 Style="{StaticResource ModernTextBox}"
                                                 BorderThickness="0"
                                                    Validation.ErrorTemplate="{x:Null}"
                                                 BorderBrush="Transparent"
                                                 Width="50"
                                                 Background="Transparent"/>
                                    </Border>

                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button x:Name="submitBtn"
                            Content="ثبت"
                            Style="{StaticResource ModernButtonStyle}"
                            Margin="10"
                            Height="30"
                            Width="110"
                            Command="{Binding SubmitCommand}"/>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,5,0">
                <Button Content="ℹ"
                        Width="25" Height="25"
                        FontWeight="Bold"
                        Background="#353340"
                        Foreground="White"
                        BorderBrush="#272537"
                        Click="InfoButton_Click"/>


                <Popup x:Name="InfoPopup" AllowsTransparency="True"
                       PlacementTarget="{Binding ElementName=InfoButton}"
                       Placement="Bottom"
                       StaysOpen="False">
                    <Border Background="#353340" 
                            Padding="10" 
                            CornerRadius="10"
                            BorderBrush="#272537"
                            BorderThickness="1">
                        <TextBlock FlowDirection="RightToLeft" Text="ورودی به دقیقه وارد شود، برای رفتن به درس بعدی از دکمه Tab استفاده کنید."
                       Foreground="White"
                       FontSize="12"
                       TextWrapping="Wrap"
                       Width="200"/>
                    </Border>
                </Popup>
            </StackPanel>
        </Grid>
    </Border>
</Window>

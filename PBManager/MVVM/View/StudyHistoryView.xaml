<Window x:Class="PBManager.MVVM.View.StudyHistoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PBManager.MVVM.View"
        xmlns:conv="clr-namespace:PBManager.Converters"
        mc:Ignorable="d"
        Title="StudyHistoryView" Height="450" Width="400"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <conv:DateConverter x:Key="PersianDateConverter"/>
        <conv:MinuteToHourConverter x:Key="MinuteToHourConverter"/>
    </Window.Resources>
    <Border Background="#272537" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid x:Name="TitleBar"
                  Grid.Row="0"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                  Background="Transparent">
                <TextBlock Text="تاریخچه مطالعه"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="20"/>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,5,5,0">
                    <Button x:Name="MinimizeButton" 
                            Click="MinimizeButton_Click" 
                            Content="—" 
                            Style="{StaticResource WindowButtonStyle}"/>
                    <Button x:Name="CloseButton" 
                            Click="CloseButton_Click" 
                            Content="✕" 
                            Style="{StaticResource WindowButtonStyle}"/>
                </StackPanel>
            </Grid>

            <ItemsControl ItemsSource="{Binding Records}" Grid.Row="1" Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,5" Padding="15" Background="#323040" CornerRadius="8" BorderThickness="1" BorderBrush="#444"
                    Cursor="Hand">
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick" 
                                  Command="{Binding DataContext.EditRecordCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                  CommandParameter="{Binding}"/>
                            </Border.InputBindings>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3a3848"/>
                                            <Setter Property="BorderBrush" Value="#555"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" FlowDirection="RightToLeft">
                                    <TextBlock Text="شروع هفته"
                       FontSize="11"
                       Foreground="#999"
                       FontWeight="Medium"/>
                                    <TextBlock Text="{Binding StartOfWeek, Converter={StaticResource PersianDateConverter}}"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" FlowDirection="RightToLeft">
                                    <TextBlock Text="پایان هفته"
                                   FontSize="11"
                                   Foreground="#999"
                                   FontWeight="Medium"/>
                                    <TextBlock Text="{Binding EndOfWeek, Converter={StaticResource PersianDateConverter}}"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,2,0,0"/>
                                </StackPanel>

                                <Border Grid.Row="1" Grid.ColumnSpan="2" 
                            Background="#2a2836" 
                            CornerRadius="6" 
                            Margin="0,10,0,0" 
                            Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" FlowDirection="RightToLeft">
                                            <TextBlock Text="کل مطالعه"
                               FontSize="11"
                               Foreground="#999"
                               HorizontalAlignment="Center"
                               FontWeight="Medium"/>
                                            <TextBlock Text="{Binding TotalMinutes, Converter={StaticResource MinuteToHourConverter}}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#44aa44"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" FlowDirection="RightToLeft">
                                            <TextBlock Text="میانگین روزانه"
                               FontSize="11"
                               Foreground="#999"
                               HorizontalAlignment="Center"
                               FontWeight="Medium"/>
                                            <TextBlock Text="{Binding AverageMinutes, StringFormat={}{0:#}, Converter={StaticResource MinuteToHourConverter}}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#ffaa44"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <Border Grid.Row="0" Grid.ColumnSpan="2" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top"
                            Background="#44aa44"
                            CornerRadius="10"
                            Width="20" Height="20"
                            Margin="5">
                                    <TextBlock Text="✏" 
                                   FontSize="10" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Text="هیچ مطالعه‌ای ثبت نشده است"
                       Foreground="#999"
                       FontSize="16"
                       FontFamily="Shabnam"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="1">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Records.Count}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Border>
</Window>
